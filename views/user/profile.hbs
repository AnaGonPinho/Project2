<H1>profile: userinfo + favourite recipes + mycreations</H1>
<h1>{{user.email}}</h1>

<a href="/profile/create" class="btn btn-primary"><button type="submit">Create
    recipe</button></a>

{{#each user.createdRecipes}}
  <p>{{label}}</p>
  <img src="{{image}}" alt="foodImage" />
  <p>{{healthLabels}}</p>
  <p>{{ingredientLines}}</p>
  <p>{{cuisineType}}</p>
  <p>{{preparation}}</p>
   {{!-- add the form to handle the POST request to remove a specific book  --}}
      <a href="/profile/{{_id}}/edit"><button>Edit</button></a>
  
    <form action="/profile/{{_id}}/remove-created" method="POST">
      <button type="submit">Delete</button>
    </form>
  </div>
{{/each}}

{{#each user.favoriteRecipes}}
  <p>{{name}}</p>
  <img src="{{imgUrl}}" alt="foodImage" />
  <a href="/recipes-list/{{uri}}">{{name}}</a>
   
  
   <form action="/profile/{{_id}}/remove-favorite" method="POST">
      <button type="submit">Delete</button>
    </form>
  </div>
{{/each}}